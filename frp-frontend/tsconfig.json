{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node", // Ensures TypeScript resolves modules like Node.js
        "jsx": "react-jsx", // Or "react" if using older versions of TypeScript
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "jest"
        ] // Add jest type here
    },
    "include": [
        "src/**/*"
    ] // Ensure all your source files are included
}